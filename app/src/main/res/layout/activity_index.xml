<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cfffffff" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:text="@string/app_name"
                android:textSize="28sp"
                android:textColor="#ffffff"
                android:id="@+id/text_index_header"
                android:background="#ff0099ff"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#ff0099ff">
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="125dp">

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="fill_parent"
                android:layout_weight="0.45"
                android:id="@+id/btn_index_nfc_pay">

                <ImageView
                    android:layout_height="80dp"
                    android:layout_width="80dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/nfc_pay"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="@string/nfc_pay"
                    android:textSize="20sp"
                    android:textColor="#FF0099FF"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="fill_parent"
                android:layout_weight="0.45"
                android:id="@+id/btn_index_get_good_list">

                <ImageView
                    android:layout_height="80dp"
                    android:layout_width="80dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/aks"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="@string/aks"
                    android:textSize="20sp"
                    android:textColor="#FF0099FF"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#ff0099ff">
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#aaaaaaff">
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:weightSum="1"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:id="@+id/btn_index_manage_card">

            <TextView
                android:layout_width="225dp"
                android:layout_height="match_parent"
                android:layout_weight="0.22"
                android:gravity="center_vertical"
                android:text="@string/manage_card"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#aaaaaaff">
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:weightSum="1"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:id="@+id/btn_index_transaction_history">
            <TextView
                android:layout_width="225dp"
                android:layout_height="match_parent"
                android:layout_weight="0.22"
                android:gravity="center_vertical"
                android:text="@string/check_transaction_history"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#aaaaaaff">
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:weightSum="1"
            android:id="@+id/btn_index_setting"
            android:paddingLeft="40dp"
            android:paddingRight="40dp">

            <TextView
                android:layout_width="224dp"
                android:layout_height="match_parent"
                android:layout_weight="0.22"
                android:gravity="center_vertical"
                android:text="@string/settings"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#aaaaaaff">
        </LinearLayout>
    </LinearLayout>
</LinearLayout>